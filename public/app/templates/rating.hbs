<form>
  <header>
    <h3>Meilenstein {{model.milestone}}</h3>
  </header>
  <div class="form-group">
    <label for="ratingKoInput">K.O.</label>
    {{input elementId="ratingKoInput" type="number" min=0 max=1 step=0.5 value=model.ko classNames="form-control"}}
  </div>
  <div class="form-group">
    <label for="ratingCommentInput">Kommentar</label>
    {{textarea value=model.comment elementId="ratingCommentInput" classNames="form-control" rows=6}}
  </div>
  <button class="btn btn-primary" {{action "saveRating" model}}>{{fa-icon "floppy-o"}} Speichern</button>
</form>
