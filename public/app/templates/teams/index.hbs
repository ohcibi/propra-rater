<div class="row">
  <header class="col-md-12 team-select">
    <div class="input-group">
      {{input elementId="teamFilter" value=teamFilter classNames="form-control" placeholder="Suche Team"}}
      <div class="input-group-addon">{{fa-icon "search"}}</div>
    </div>

    {{#if teamFilter}}
      <ul class="dropdown-menu results">
        {{#each filteredTeams as |team|}}
          <li>
            {{link-to team.name_with_namespace "team" team.namespace.path team.path}}
          </li>
        {{else}}
          <li class="text-center"><em>Kein team gefunden</em></li>
        {{/each}}
      </ul>
    {{/if}}

  </header>
</div>

<div class="row teams">
  <div class="col-md-12">
    {{#each groups as |group|}}
      <div class="panel panel-default">
        <div class="panel-heading">
          <h3 class="panel-title">Gruppe {{group.number}}</h3>
        </div>
        <div class="panel-body">
          <ul>
            {{#each group.teams as |team|}}
              <li>
                {{link-to team.name "team" team.namespace.path team.path}}
              </li>
            {{/each}}
          </ul>
        </div>
      </div>
    {{/each}}
  </div>
</div>
