<div class="row">
  <header class="col-md-12">
    <h2>{{model.name}}</h2>
  </header>
</div>

<div class="row">

  <div class="col-md-3 ratings">
    <table class="table table-striped table-hover table-bordered">

      <thead>
        <tr>
          <th>Meilenstein</th>
          <th>K.O</th>
        </tr>
      </thead>

      <tbody>
        {{#each model.ratings as |rating|}}
          <tr>

            <td class="milestone-col">{{link-to rating.milestone "rating" rating}}</td>

            <td class="rating-col text-{{rating.sanity}} bg-{{rating.sanity}}">
              {{member-rating name=model.name rating=rating}}
            </td>

          </tr>
        {{else}}

          <tr><td colspan="2">Noch keine Bewertung vorhanden</td></tr>

        {{/each}}
      </tbody>

    </table>
  </div>

  <div class="col-md-5">
    {{outlet}}
  </div>
  <div class="col-md-4">
    <img src="http://media.giphy.com/media/cON4OTOjICjHq/giphy.gif">
  </div>

</div>
